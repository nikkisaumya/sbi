{% extends "MainAdminBundle::layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts

    '@MainAdminBundle/Resources/public/js/Controlers/listApiControler.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block body %}
    <div class="row">
        <div id="profile" data-profile="{{ app.request.get('id') }}"></div>
        <div class="col-sm-12 col-md-12">
            <h1 class="page-header">Api sources</h1> <a href="{{ path('new_api') }}" class="btn btn-success">Create new API source</a>
        </div>
    </div>
    <div class="space-10"></div>
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div ng-controller="ListApiCtrl">
                <table ng-table="tableParams" class="table table-condensed">
                    <tr ng-repeat="api in $data">
                        <td data-title="'Id'" sortable="'id'"><span ng-bind="api.id"></span></td>
                        <td data-title="'Name'" sortable="'name'"><span ng-bind="api.name"></span></td>
                        <td data-title="'Url'" sortable="'url'"><span ng-bind="api.url"></span></td></td>
                        <td data-title="'Actions'">
                            <a href="{{ app.request.getBaseURL() }}/apis/{{ '{{api.id}}' }}/edit">
                                <button class="btn btn-danger btn-xs">
                                    <span class="glyphicon glyphicon-stats"></span> Edit
                                </button>
                            </a>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}