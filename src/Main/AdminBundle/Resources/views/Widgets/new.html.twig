{% extends "MainAdminBundle::layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts

    '@MainAdminBundle/Resources/public/js/Controlers/widgetsControler.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block body %}
    <div class="row">
        <div id="profile" data-profile="{{ app.request.get('id') }}"></div>
        <div class="col-sm-12 col-md-12">
            <h1 class="page-header">New widget</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-7 col-md-7">
            <div ng-controller="NewWidgetCtrl" class="ng-cloak">
                <form>
                    <div class="form-group">
                        <label for="title">Email address</label>
                        <input type="text" class="form-control" id="title" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <div class="btn-group" ng-model="button.checkbox" bs-checkbox-group>
                            <label class="btn btn-default"><input type="checkbox" value="left"> Real Time</label>
                            <label class="btn btn-default"><input type="checkbox" value="middle"> Private</label>
                            <label class="btn btn-default"><input type="checkbox" value="right"> Refresh</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="button"
                                class="btn btn-default"
                                ng-model="source"
                                ng-options="source.key as source.value for source in sources"
                                placeholder="Report source"
                                bs-select>
                        </button>
                        <button type="button"
                                class="btn btn-default"
                                ng-model="type"
                                ng-options="type.value for type in types"
                                placeholder="Report type"
                                bs-select>
                        </button>
                    </div>
                    {# API #}
                    <div ng-show="source=='API'">
                        <div class="input-group">
                            <span class="input-group-btn">
                               <button class="btn btn-default" ng-click="getApi()" type="button">Get</button>
                            </span>
                            <input type="text" class="form-control" ng-model="apiAddress" id="api" placeholder="Api source">
                        </div>
                        <div class="space-10"></div>
                        <label for="api-source">Source</label>
                        <textarea id="api-source" class="api-textarea" ng-model="apiSource" disabled></textarea>
                    </div>

                    {# DB #}
                    <button type="button"
                            ng-show="source=='DB'"
                            class="btn btn-default"
                            ng-model="db"
                            ng-options="db.key as db.value for db in dbs"
                            placeholder="Source"
                            bs-select>
                    </button>
                    <div ng-show="db && source=='SQL'">
                        <i class="fa fa-spinner fa-spin fa-2x"></i>
                    </div>

                    <div class="space-10"></div>
                    <div class="form-group pull-right">
                        <button class="btn btn-default">Render graph</button>
                        <button class="btn btn-default">Save template</button>
                        <button class="btn btn-success">Save</button>
                    </div>
                </form>
                {#<nvd3 options='options' data='data'></nvd3>#}

            </div>
        </div>
        <div class="col-sm-5 col-md-5">
            {# OTHER INPUTS #}
        </div>
    </div>

{% endblock %}