{% extends "MainAdminBundle::layout.html.twig" %}

{% block body %}
{% trans_default_domain 'FOSUserBundle' %}
{% if error %}
    <div class="alert alert-danger">{{ error|trans }}</div>
{% endif %}

<div id="main" role="main">
    <div class="col-xs-12 col-sm-12 col-md-4 col-md-offset-1 col-lg-4">
        <div class="well no-padding">
            <form action="{{ path("fos_user_security_check") }}" id="login-form" method="post" class="smart-form client-form">
                <header>Log In</header>
                <fieldset>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <section>
                        <label class="label">E-mail</label>
                        <label class="input"> <i class="icon-append fa fa-user"></i>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" >
                            <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter email address/username</b></label>
                    </section>

                    <section>
                        <label class="label">Password</label>
                        <label class="input"> <i class="icon-append fa fa-lock"></i>
                            <input type="password" id="password" name="_password">
                            <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your password</b> </label>
                        <div class="note">
                            <a href="#">Forgot password?</a>
                        </div>
                    </section>

                    <section>
                        <label class="checkbox">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="remember-me">
                            <i></i>Stay signed in</label>
                    </section>
                </fieldset>
                <footer>
                    <button id="_submit" name="_submit" type="submit" class="btn btn-primary">
                        Sign in
                    </button>
                </footer>
            </form>
        </div>
    </div>
</div>

{% endblock %}